<div class="container">

  <div class="row">
    <div class="col-sm-12">
      <center>
        <h1>Food Truck Locator</h1>
      </center>
    </div>
  </div>

  <div class="row">
    <div class="col-md-12">
      <center>
        <ul>
          {{#each locations}}
          <li><button class="locationButton" data-id="{{this.id}}">
              {{this.location}}
            </button></li>
          {{/each}}
        </ul>
        <button>
          <a href="/add-truck">Got a Truck? Add it to Our Database!</a>
        </button>

      </center>
    </div>
  </div>

</div>