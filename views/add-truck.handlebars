<h2>Add a Truck</h2>
<form class="create-form">

    <div class="form-group">
        <label for="truckName">Truck Name:</label>
        <input type="text" id="truckName" name="truckName">
    </div>

    <div class="form-group">
        <label for="truckLocation">Truck Location:</label>
        <select name="locationDropDown">
            {{#each locations}}
            <option> {{this.location}} </option>
            {{/each}}
        </select>
        <br><br>
    </div>

    <div class="form-group">
        <label for="cuisineName">Type of Cuisine (ex: Thai):</label>
        <input type="text" id="cuisineName" name="cuisineName">
    </div>

    <button type="submit">Add Truck</button>
</form>